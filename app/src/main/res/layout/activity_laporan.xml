<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Laporan">


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_tgl_laporan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="tgl"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_tempat_laporan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:hint="tempat"
        app:layout_constraintTop_toBottomOf="@+id/et_tgl_laporan"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_laporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="save"

        app:layout_constraintTop_toBottomOf="@+id/et_tempat_laporan" />

</androidx.constraintlayout.widget.ConstraintLayout>